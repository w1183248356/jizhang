<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="contentPadding">@dimen/cardview_padding</item>
    </style>
    <style name="CardViewStyle.Shade">
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardCornerRadius">1dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="CardViewStyle.NoShade">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="CardViewStyle.NoShadeNoPadding">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="contentPadding">0dp</item>
    </style>


    <style name="DrawableCenterTextStyle">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="DrawableCenterTextStyle.Weight">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">#EEE</item>
    </style>
    <style name="DividerStyle.Horizontal">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="DividerStyle.Horizontal.thin">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DividerStyle.Horizontal.fat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <!--<item name="android:popupBackground">@color/darkturquoise</item>-->
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <!--<item name="android:dropDownHorizontalOffset">0dp</item>-->
        <!-- 设置弹出菜单文字颜色 -->
        <!--<item name="android:textColor">@color/white</item>-->
    </style>
</resources>
